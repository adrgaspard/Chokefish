<UserControl x:Class="AdrGaspard.ChokefishSuite.UI.WPF.Views.Board.BoardUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdrGaspard.ChokefishSuite.UI.WPF.Views.Board"
             mc:Ignorable="d">
    <UniformGrid Rows="8">
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[0]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[1]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[2]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[3]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[4]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[5]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[6]}" />
        <local:RankUC DataContext="{Binding Path=RanksFromPerspective[7]}" />
    </UniformGrid>
</UserControl>
