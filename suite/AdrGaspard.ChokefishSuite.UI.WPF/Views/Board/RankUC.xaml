<UserControl x:Class="AdrGaspard.ChokefishSuite.UI.WPF.Views.Board.RankUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdrGaspard.ChokefishSuite.UI.WPF.Views.Board"
             mc:Ignorable="d">
    <UniformGrid Columns="8">
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[0]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[1]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[2]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[3]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[4]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[5]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[6]}" />
        <local:SquareUC DataContext="{Binding Path=SquaresFromPerspective[7]}" />
    </UniformGrid>
</UserControl>
