      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Sprites\Pieces\queenBlack.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
