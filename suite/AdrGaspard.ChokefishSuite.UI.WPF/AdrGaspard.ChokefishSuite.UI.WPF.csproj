    <None Remove="Resources\Sprites\Pieces\pawnWhite.png" />
    <None Remove="Resources\Sprites\Pieces\queenBlack.png" />
    <None Remove="Resources\Sprites\Pieces\queenWhite.png" />
    <None Remove="Resources\Sprites\Pieces\rookBlack.png" />
    <None Remove="Resources\Sprites\Pieces\rookWhite.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\icon.ico" />
    <Content Include="Resources\Sprites\Pieces\bishopBlack.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Sprites\Pieces\bishopWhite.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Sprites\Pieces\kingBlack.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Sprites\Pieces\kingWhite.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Sprites\Pieces\knightBlack.png">
